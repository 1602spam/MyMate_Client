<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Page.PWHelpRedirectPageF"
             Shell.NavBarIsVisible="False"
             Title="PWHelpRedirectPageF">
    <Grid RowDefinitions="1*,8*,1*">
        <Frame Grid.Row="0">
        </Frame>
        <Frame ZIndex="1" BackgroundColor="{x:StaticResource DashboardBackground}" Grid.Row="1" VerticalOptions="CenterAndExpand" 
               Margin="0,0,40,0">
            <ScrollView >

                <VerticalStackLayout Spacing="25">
                    <Label Text="비밀번호 변경이 실패했습니다." FontSize="28" FontAttributes="Bold"/>

                    <Button Text="SignIn" CornerRadius="0" HeightRequest="60" FontSize="20" FontAttributes="Bold" Released="OnButtonReleased"/>

                </VerticalStackLayout>
            </ScrollView>
        </Frame>
    </Grid>
</ContentPage>