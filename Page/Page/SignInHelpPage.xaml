<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Page.SignInHelpPage"
             Shell.NavBarIsVisible="False"
             Title="SignInHelpPage">
    <Grid RowDefinitions="1*,8*,1*">
        <Frame Grid.Row="0">
        </Frame>

        <Frame Grid.Row="1">
            <VerticalStackLayout Spacing="10">
                <Button Text="Find ID" CornerRadius="0" HeightRequest="60" FontSize="20" FontAttributes="Bold" Released="OnIDButtonReleased"/>
                <Button Text="Find PW" CornerRadius="0" HeightRequest="60" FontSize="20" FontAttributes="Bold" Released="OnPWButtonReleased"/>
            </VerticalStackLayout>
        </Frame>
        
        <Frame Grid.Row="2">
        </Frame>

    </Grid>
</ContentPage>